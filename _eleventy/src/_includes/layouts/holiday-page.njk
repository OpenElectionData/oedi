---
layout: base
---

{% block pageCSS %}
  {%- if head.size > 0-%}
    {%- for item in head -%}
     <link href="{{ item }}" rel="stylesheet">
    {%- endfor -%}
  {%- endif -%}
{% endblock %}

{% block content %}
<article class="page">
  {{ content | safe }}
</article>
{% endblock %}

{% block pageJS %}
  {%- if footer.size > 0-%}
    {%- for item in footer -%}
     <script src="{{ item }}" type="text/javascript"></script>
    {%- endfor -%}
  {%- endif -%}
{% endblock %}