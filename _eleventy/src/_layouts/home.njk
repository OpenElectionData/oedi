---
layout: base
---

{% block pageCSS %}
<link rel="stylesheet" href="{{ site.url }}{{ '/_assets/css/pages/home.css' }}" />
{% endblock %}

<article class="home">
  <header class="home__header">
    <img
      src="/_assets/images/meta/oedi-logo-white.png"
      id="logo"
      class="home__logo"
      width="87"
      height="130"
      alt=""
    />
    <h1>
      <div class="home__title">{{ 'website_title' | i18n }}</div>
      <div class="home__subtitle">
        {{
        'unleashing_the_potential_of_election_data_to_promote_accountability' | i18n
        }}
      </div>
    </h1>
  </header>
  <div class="cards">
    {% for card in cards %}
    <article class="card">
      <header>
        <h2><a href="{{ card.slug }}">{{ card.title | safe }}</a></h2>
      </header>
      <div class="card__details">
        <div class="card__side card__side--font">
          <img src="/_assets/images/meta/{{ card.img }}" alt="" />
        </div>
        <div class="card__side card__side--back">
          <p>{{ card.subtitle | safe }}</p>
          <a href="{{ card.slug }}">{{ card.viewMore }}</a>
        </div>
      </div>
      <div class="card__main">
        <p>{{ card.desc }}</p>
        <a href="{{ card.slug }}">{{ 'read_more' | i18n }}...</a>
      </div>
    </article>
    {% endfor %}
  </div>
</article>